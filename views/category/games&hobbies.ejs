<%- include('../partials/header.ejs') %>


    <div class="container" ">
      <h1 style="margin-top: 10px;">Games & Hobbies</h1>
      <div class="dropdown" style="margin-bottom: 25px; margin-top: 20px;">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          Sort Menu
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="/product/category/games&hobbies/sort/name_asc">Name: Ascending</a></li>
          <li><a class="dropdown-item" href="/product/category/games&hobbies/sort/name_dsc">Name: Descending</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/product/category/games&hobbies/sort/pr_asc">Price: Ascending</a></li>
          <li><a class="dropdown-item" href="/product/category/games&hobbies/sort/pr_dsc">Price: Descending</a></li>
        </ul>
      </div>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">

        

        <% Product.forEach(function(Product){  %>

      <!-- <div class="card" > -->

        <a href="/product/<%= Product._id %>" style="text-decoration: none; ">
        <div class="col">
          <div class="card shadow-sm card-ani" style="border: 2px solid rgb(112, 112, 112); ">
            
              <img src='<%= Product.image %>' class='card-img-top' height="200px" width=" 200px">
            
            <div class="card-body" style="border-top: 2px solid rgb(212, 212, 212); background-color: rgb(241, 239, 239);">
               <h5 class = 'card-title' style="color: black;"><%= Product.name %></h5> 
              <!-- <p class="card-text"><%= Product.desc %></p> -->
              <div class="d-flex justify-content-between align-items-center">
                <div >
                  <!-- <a href="/product/<%= Product._id %>" class="btn btn-sm btn-outline-secondary">View details</a> -->
                  <% if(Product.qty <= 0){ %>
                    <small style="color: red; font-size: 22px;">Out of stock!</small>
                  <% }; %>
                </div>
                <small style="color: red; font-size: 25px;"> $<%= Product.pr %> <!--  ( <%= Product.qty %> in stock) --> </small> 
              </div>
            </div>
          </div>
        </div>
      </a>

      <!-- </div> -->


        

        <% }); %>
      
      
      
      </div>
    </div>



<%- include('../partials/footer.ejs') %>