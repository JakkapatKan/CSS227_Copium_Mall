<%- include('../partials/header.ejs') %>


<link rel='stylesheet' href='/stylesheets/form.css'>



<div class='container'>
<form action='/user/<%= user._id %>?_method=PUT' method='POST' enctype="multipart/form-data">
  

  <main class="login-form" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header " style="text-align: center;" >Edit Profile</div>
                    <div class="card-body">
                        <form action="" method="">

                            <div class="form-group row">
                                <label for="" class="col-md-4 col-form-label text-md-right">First Name</label>
                                <div class="col-md-6">
                                    <input type="text" id="" name='user[firstName]' class="form-control"  placeholder='<%= user.firstName %>' value="<%= user.firstName %>" >
                                </div>
                            </div>

                            <div class="form-group row">
                              <label for="" class="col-md-4 col-form-label text-md-right">Last Name</label>
                              <div class="col-md-6">
                                  <input type="text" id="" class="form-control" name='user[lastName]'  placeholder='<%= user.lastName %>' value="<%= user.lastName %>" >
                              </div>
                          </div>
                            
                            
                            <div class="form-group row">
                              <label for="" class="col-md-4 col-form-label text-md-right">Profile Image</label>
                              <div class="col-md-6">
                                  <img src="<%= user.profileImage %>" width="200px" height="200px" style="margin-bottom: 15px;">
                                  <input type="file" id="" class="form-control" name='profileImage'  accept="image/*" >
                              </div>
                          </div>
                            
                          <div class="form-group row">
                            <label for="" class="col-md-4 col-form-label text-md-right">Email</label>
                            <div class="col-md-6">
                                <input type="text" id="" class="form-control" name='user[email]' placeholder='<%= user.email %>' value="<%= user.email %>" >
                            </div>
                        </div>

                        <div class="form-group row">
                          <label for="" class="col-md-4 col-form-label text-md-right">Address</label>
                          <div class="col-md-6">
                              <!-- <input type="text" id="" class="form-control"  placeholder='<%= user.address %>' value="<%= user.address %>" > -->
                              <textarea class="form-control" name='user[address]' id="exampleFormControlTextarea1" rows="5" placeholder='<%= user.address %>' value="<%= user.address %>" ><%= user.address %></textarea>
                          </div>
                      </div>

                      
                          
                            
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">Update profile</button>
                              </form>

                              <form id= 'delete-form' action = '/user/<%=user._id%>?_method=DELETE' method="POST">
                                <button onclick="return confirm('Are you sure?')" type="submit" class="btn btn-danger">Delete Account</button>
                            </form>


                            </div>
                    </div>

                   



                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>






    
    
    


  


