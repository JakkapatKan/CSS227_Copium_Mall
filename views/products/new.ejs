<%- include('../partials/header.ejs') %>
<link rel='stylesheet' href='/stylesheets/form.css'>
<style>
  
  
</style>
<section class="py-5 text-center container" >
<div class='container'>
<form action='/product' method='POST' enctype="multipart/form-data">


  <main class="login-form" >
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">Add new product</div>
                    <div class="card-body">
                        <form action="" method="">

                            <div class="form-group row row-footsies">
                                <label for="" class="col-md-4 col-form-label text-md-right">Product Name</label>
                                <div class="col-md-6">
                                    <input type="text" id="" class="form-control" name="product[name]" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row row-footsies">
                              <label for="" class="col-md-4 col-form-label text-md-right">Product Category</label>
                              <div class="col-md-6">
                                  <select type="text" id="" class="form-select" name="product[category]" >                                      
                                      <option value="Food">Food</option>
                                      <option value="Fashion">Fashion</option>
                                      <option value="Electronic">Electronic</option>
                                      <option value="Games&Hobbies">Games&Hobbies</option>
                                  </select>
                                  
                              </div>
                            </div>
                            
                            <div class="form-group row row-footsies">
                              <label for="" class="col-md-4 col-form-label text-md-right">Product Image</label>
                              <div class="col-md-6">
                                  <input type="file" id="" class="form-control" name="image" accept="image/*" required>
                              </div>
                          </div>
                            
                          <div class="form-group row row-footsies">
                            <label for="" class="col-md-4 col-form-label text-md-right">Product Description</label>
                            <div class="col-md-6">
                                <textarea class="form-control" name='product[desc]' id="exampleFormControlTextarea1" required rows="5"></textarea>
                            </div>
                          </div>  

                          <div class="form-group row row-footsies">
                            <label for="" class="col-md-4 col-form-label text-md-right">Product Price</label>
                            <div class="col-md-6">
                                <input type="text" id="" class="form-control" name="product[pr]" required>
                            </div>
                          </div>

                          <div class="form-group row row-footsies">
                              <label for="" class="col-md-4 col-form-label text-md-right">Product Quantity</label>
                              <div class="col-md-6">
                                  <input type="text" id="" class="form-control" name="product[qty]" required>
                              </div>
                          </div> 

                          
                            
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">Add new product</button>
                                
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>
</section>




<%- include('../partials/footer.ejs') %>